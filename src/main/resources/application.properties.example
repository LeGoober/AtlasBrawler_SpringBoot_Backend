# Atlas Brawler Backend Configuration
spring.application.name=atlas-brawler-backend

# Server Configuration
server.port=8080
server.servlet.context-path=/api

# Database Configuration (MySQL for Production)
spring.datasource.url=jdbc:mysql://localhost:3306/atlas_brawler?createDatabaseIfNotExist=true
spring.datasource.username=YOUR_MYSQL_USERNAME
spring.datasource.password=YOUR_MYSQL_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.format_sql=true

# Celo Blockchain Configuration
# MAINNET (Production)
celo.network=mainnet
celo.rpc.url=https://forno.celo.org
celo.chain.id=42220
celo.wallet.private.key=YOUR_MAINNET_PRIVATE_KEY_HERE

# TESTNET (Development) - Uncomment for testing
#celo.network=alfajores
#celo.rpc.url=https://alfajores-forno.celo-testnet.org
#celo.chain.id=44787
#celo.wallet.private.key=YOUR_TESTNET_PRIVATE_KEY_HERE

# Contract Addresses (Update after deployment)
celo.contract.reward.address=
celo.contract.nft.address=
celo.contract.token.address=

# Security Configuration
spring.security.user.name=admin
spring.security.user.password=YOUR_SECURE_PASSWORD

# JWT Configuration
jwt.secret=YOUR_SUPER_SECRET_JWT_KEY_CHANGE_THIS
jwt.expiration=86400000

# CORS Configuration
cors.allowed.origins=http://localhost:5173,http://localhost:3000

# Actuator Configuration
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always

# Logging Configuration
logging.level.root=INFO
logging.level.com.atlasbrawler=DEBUG
logging.level.org.web3j=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# File Upload Configuration
spring.servlet.multipart.max-file-size=5MB
spring.servlet.multipart.max-request-size=10MB
